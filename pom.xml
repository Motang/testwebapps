	<groupId>com.test1</groupId>
	<artifactId>testwebapps</artifactId>
	<packaging>war</packaging>
	<version>1.0-SNAPSHOT</version>
	
	<name>testwebapps Maven Webapp</name>
	<url>http://maven.apache.org</url>

	<profiles>
		<profile>
			<id>tomcat-linuxTomcat6_129</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<maven.tomcat.server>linuxTomcat6_129</maven.tomcat.server>
				<!-- <maven.tomcat.url>http://192.168.128.129:8080/manager/html</maven.tomcat.url>
				<maven.tomcat.url>http://localhost:8080/manager/html</maven.tomcat.url> -->
